{
  "name": "LLM MCP Server",
  "version": "1.0.0",
  "description": "LLM MCP Server for local LLM management and tools",
  "servers": [
    {
      "name": "Local LLM MCP",
      "url": "http://localhost:8000/mcp"
    }
  ],
  "tools": [
    {
      "name": "list_models",
      "description": "List all available models",
      "parameters": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "generate_text",
      "description": "Generate text using a specified model",
      "parameters": {
        "type": "object",
        "properties": {
          "model": {
            "type": "string",
            "description": "Name of the model to use"
          },
          "prompt": {
            "type": "string",
            "description": "Input prompt for text generation"
          },
          "max_tokens": {
            "type": "integer",
            "description": "Maximum number of tokens to generate"
          }
        },
        "required": ["model", "prompt"]
      }
    }
  ]
}
